{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Chapter Frontmatter",
  "type": "object",
  "required": ["title", "description", "sidebar_position"],
  "properties": {
    "title": {
      "type": "string",
      "description": "The H1 title of the chapter"
    },
    "description": {
      "type": "string",
      "description": "Short summary for SEO and card previews"
    },
    "sidebar_position": {
      "type": "integer",
      "minimum": 1,
      "description": "Order in the sidebar menu"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Docusaurus search tags"
    }
  }
}
